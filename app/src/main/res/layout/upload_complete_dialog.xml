<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialog_radius"
    android:paddingHorizontal="120dp"
    android:paddingVertical="60dp"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/logo_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/dialog_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정상적으로 방명록\n업로드가 완료되었습니다!"
        android:fontFamily="@font/suit_medium"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/logo_icon"
        app:layout_constraintStart_toStartOf="@id/logo_icon"
        app:layout_constraintEnd_toEndOf="@id/logo_icon"
        android:layout_marginTop="40dp"
        />

    <Button
        android:id="@+id/check_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="확인"
        android:paddingVertical="10dp"
        android:paddingHorizontal="110dp"
        android:backgroundTint="#FF7572FF"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/dialog_text"
        app:layout_constraintTop_toBottomOf="@id/dialog_text"
        />

</androidx.constraintlayout.widget.ConstraintLayout>