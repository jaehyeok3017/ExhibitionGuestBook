<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/colorPalette"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/colorRed"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/color_red"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"/>

        <ImageView
            android:id="@+id/colorOrange"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/color_orange"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/colorRed"
            android:layout_marginStart="20dp"/>

        <ImageView
            android:id="@+id/colorGreen"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/color_green"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/colorOrange"
            android:layout_marginStart="20dp"/>

        <ImageView
            android:id="@+id/colorBlue"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/color_blue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/colorGreen"
            android:layout_marginStart="20dp"/>

        <ImageView
            android:id="@+id/colorPink"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/color_pink"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/colorBlue"
            android:layout_marginStart="20dp"/>

        <ImageView
            android:id="@+id/colorBlack"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/color_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/colorPink"
            android:layout_marginStart="20dp"/>

        <ImageView
            android:id="@+id/erase"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_erase"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/colorBlack"
            android:layout_marginStart="20dp"/>

        <ImageView
            android:id="@+id/delete"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_trashcan"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/upload"
            android:layout_marginEnd="20dp"/>

        <ImageView
            android:id="@+id/upload"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_upload"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.example.exhibitionguestbook.CanvasView
        android:id="@+id/canvas"
        android:layout_width="match_parent"
        android:layout_height="1200dp"
        app:layout_constraintTop_toBottomOf="@id/colorPalette"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>